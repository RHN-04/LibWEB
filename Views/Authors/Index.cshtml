@model IEnumerable<LibWEB.ViewModel.AuthorViewModel>
@{
    ViewData["Title"] = "Список авторов";
}
<h1>Авторы</h1>
<div class = "row">
    <div class="col md-8 offset md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Surname)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Patronymic)</th>
                    <th>@Html.DisplayNameFor(model => model.CountryName)</th>
                    <th>Действия</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model){
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Patronymic)
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.CountryName)
                        </td>
                        <td class="align-middle">
                            <a asp-controller="Authors" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                <i class="bi bi-pencil-square"></i> Редактировать
                            </a>
                        </td>
                    </tr>
                }
        </table>
    </div>
</div>
